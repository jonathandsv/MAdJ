@model MAJS.Models.Evento
@{
    Layout = null;
    ViewBag.Title = "CadastrarEvento";
}

<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Cadastrar novo Evento</h3>
    </div>
    <!--/ Box-Header-->
    <form role="form" action="/Evento/NovoEvento" method="post" name="novoevento">
        <div class="box-body">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Escolha o tipo de Evento:</label>
                    <select class="form-control">
                        @foreach (var item in ViewBag.ListaEventoPerfil)
                        {
                            <option value="@item.ID">@item.Descricao</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Digite o Título do Evento</label>
                    @Html.TextBoxFor(x => x.Titulo, new { @class = "form-control", type = "text", placeholder = "Título..." })
                </div>
                <div class="form-group">
                    <label>Digite a Descrição do Evento</label>
                    @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", type = "text", placeholder = "Descrição..." })
                </div>
                <div class="form-group">
                    <label>Digite o Local do Evento</label>
                    @Html.TextBoxFor(x => x.Local, new { @class = "form-control", type = "text", placeholder = "Local..." })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

