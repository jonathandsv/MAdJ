@model MAJS.Models.Ensaio
@{
    Layout = null;
    ViewBag.Title = "CadastrarEnsaio";
}

<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Ensaio</h3>
    </div>
    <!--/ Box-Header-->
    <form role="form" id="cadastro" action="/Ensaio/NovoEnsaio" method="post" name="novoensaio">
        <div class="box-body">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Digite o Título do Ensaio</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-pencil"></i>
                        </div>
                        @Html.TextBoxFor(x => x.Titulo, new { @class = "form-control", type = "text", placeholder = "Título..." })
                    </div>
                </div>
                <div class="form-group">
                    <label>Digite a Descrição do Ensaio</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-edit"></i>
                        </div>
                        @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", type = "text", placeholder = "Descrição..." })
                    </div>
                </div>
                <div class="form-group">
                    <label>Data</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        @Html.TextBoxFor(x => x.Data, new { @class = "form-control", type = "text", tipo = "data" })
                    </div>
                    <!-- /.input group -->
                </div>
                <div class="form-group">
                    <label>Hora</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        @Html.TextBoxFor(x => x.Hora, new { @class = "form-control", type = "text", tipo = "hora" })
                    </div>
                    <!-- /.input group -->
                </div>
                <div class="form-group">
                    <label>Digite o Local do Ensaio</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-map"></i>
                        </div>
                        @Html.TextBoxFor(x => x.Local, new { @class = "form-control", type = "text", placeholder = "Local..." })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

