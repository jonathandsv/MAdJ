    <!-- Main row -->
    <div class="row">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3>Próximos Ensaios</h3>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-yellow">
                        <span class="info-box-icon bg-green"><i class="fa fa-tasks"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Data: 12/01/2019</span>
                            <span class="info-box-text">Hora: 16:00 horas</span>
                            <span class="info-box-number">Capela</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.row (main row) -->*@

    <div class="row">
        <div class="col-md-6">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline time label -->
                @{ var data = "";}
                @foreach (var item in Model)
                {
                    if (data != item.Postagem.Data.ToString())
                    {
                        <li class="time-label">
                            <span class="bg-red">
                                @item.Postagem.Data.ToString("dd/MM/yyyy")
                            </span>
                        </li>
                    }

                    <!-- /.timeline-label -->
                    <!-- timeline item -->
                    <li>
                        <i class="fa fa-user bg-green"></i>

                        <div class="timeline-item">
                            <span class="time"><i class="fa fa-clock-o"></i> @item.Postagem.Hora</span>

                            <h3 class="timeline-header"><a href="#">@item.Usuario.Nome</a> Postou</h3>
                            <h4>@item.Postagem.Titulo</h4>

                            <div class="timeline-body">
                                @item.Postagem.Descricao
                            </div>
                            @*<div class="timeline-footer">
                                <a class="btn btn-primary btn-xs">Read more</a>
                                <a class="btn btn-danger btn-xs">Delete</a>
                            </div>*@
                        </div>
                    </li>
                    <!-- /.timeline-label -->
                }
                <!-- END timeline item -->
                <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                </li>
            </ul>
        </div>
        <!-- /.col -->




        <div class="col-md-4">
